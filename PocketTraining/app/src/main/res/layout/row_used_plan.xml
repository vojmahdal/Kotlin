<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="match_parent"
xmlns:app="http://schemas.android.com/apk/res-auto"
android:layout_height="96dp"
xmlns:card_view="http://schemas.android.com/tools"
android:layout_marginTop="12dp"
android:layout_marginLeft="16dp"
android:layout_marginRight="16dp"
android:id="@+id/card_pertanyaan"
card_view:cardBackgroundColor="@color/gym3"
card_view:cardCornerRadius="8dp"
card_view:contentPadding="10dp"
android:foreground="?selectableItemBackground"
android:clickable="true">


<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/UsedExerciseName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="2"
            android:layout_marginStart="2dp"
            android:ellipsize="end"
            />

        <TextView
            android:id="@+id/pauseText"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:text="pause (s)"
            android:gravity="end|center_vertical"/>



    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/pause"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="16dp"
            android:gravity="end|center_vertical"
            android:text="0000" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/repsText"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:layout_marginTop="50dp"
            android:text="Reps: "
            android:layout_marginStart="2dp"
            app:layout_constraintTop_toBottomOf="@+id/reps"/>


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/reps"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:layout_marginTop="50dp"
            android:layout_marginStart="40dp"
            android:text="00 "
            app:layout_constraintTop_toBottomOf="@+id/reps"/>


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/setsText"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:layout_marginTop="66dp"
            android:layout_marginStart="2dp"
            android:text="Sets" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/sets"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:layout_marginTop="66dp"
            android:layout_marginStart="40dp"
            android:text="00 "
            app:layout_constraintTop_toBottomOf="@+id/reps"/>


    </LinearLayout>

</RelativeLayout>

</androidx.cardview.widget.CardView>