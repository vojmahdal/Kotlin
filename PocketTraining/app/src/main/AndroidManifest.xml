<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="cz.mendelu.pockettraining">

    <application
        android:name=".ExercisesApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_gym"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_gym"
        android:supportsRtl="true"
        android:theme="@style/Theme.PocketTraining">



        <activity
            android:name=".SplashActivity"
            android:theme="@style/SplashTheme"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />


            </intent-filter>
        </activity>

        <activity
            android:name="cz.mendelu.pockettraining.SinglePageActivity"
            android:exported="true"
            android:label="single page"/>
          <!--  android:theme="@style/Theme.PocketTraining.NoActionBar"-->




        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>